<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="pop"
    title="{i18n>popTitle}"
    titleAlignment="Start">
    <content>

      <VBox>
        <Label text="Name: {data>Cname}"
          design="Bold" />
        <Label text="Position: {data>Cposition}"
          design="Bold" />
        <Label text="Department: {data>Cdepartment}"
          design="Bold" />
        <Label text="Status: {data>Cstatus}"
          design="Bold" />
        <Label text="Email: {data>Cemail}"
          design="Bold" />
        <Label text="Phone: {data>Cphone}"
          design="Bold" />
        <Label text="Location: {data>Clocation}"
          design="Bold" />
        <Label text="Salary: {data>Csalary}"
          design="Bold" />
      </VBox>
    </content>

    <endButton>
      <Button text="Close"
        press=".onCloseDialog"/>
    </endButton>

  </Dialog>
</core:FragmentDefinition>